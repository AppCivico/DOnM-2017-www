{
  "name": "donm-2017-www",
  "version": "0.2.0",
  "description": "Sistema de acompanhamento da administração municipal de São Paulo na gestão 2017.",
  "main": "index.html",
  "scripts": {
    "build": "npm-run-all --parallel build:content build:img build:css build:js",
    "prebuild": "npm-run-all --parallel lint clean",
    "build:content": "node ./_buildScripts/dataContent.js",
    "build:js": "npm-run-all compile:js",
    "build:css": "npm-run-all compile:sass compress:css",
    "build:dev": "npm-run-all build",
    "build:img": "npm-run-all compress:img",
    "build:prod": "npm-run-all build cachebust",
    "clean": "rimraf ./static/assets/**/*.{css,img,js,json,png,gif,jpg,map}",
    "cachebust": "npm run cachebust:img && npm run cachebust:cssAndJs",
    "cachebust:content": "hashmark -l 8 /**/*.{gif,jpg,png,svg} {dir}/{name}-{hash}{ext} --cwd content | replaceinfiles -s \"{content,data}/**/*.{md,yaml}\" -d \"{dir}/{base}\"",
    "cachebust:cssAndJs": "hashmark -l 8 assets/**/*.{js,css} {dir}/{name}-{hash}{ext} --cwd static | replaceinfiles -s \"layouts/**/*.html\" -d \"{dir}/{base}\"",
    "cachebust:img": "hashmark -l 8 assets/**/*.{gif,jpg,png,svg} {dir}/{name}-{hash}{ext} --cwd static | replaceinfiles -s \"{content,data,layouts,static}/**/*.{md,html,css}\" -d \"{dir}/{base}\"",
    "compile:sass": "node-sass ./_source/stylesheets --output-style compressed --output ./static/assets/css --source-map true",
    "compress:css": "postcss --use autoprefixer cssnano --safe -r ./static/assets/css/**/*.css",
    "compress:img": "imagemin \"./_source/images/**/*.{gif,jpg,png,svg}\" --out-dir=./static/assets/img",
    "compile:js": "browserify ./_source/scripts/index.js -o ./static/assets/js/index.js -t [ babelify ]",
    "prelint": "rimraf ./_testReports/**/*.xml",
    "lint": "npm-run-all --parallel lint:*",
    "lint:es": "eslint --ext .es,.js \"./_source/scripts/**\" --format junit --output-file ./_testReports/esLint.xml",
    "lint:sass": "sass-lint \"./_source/stylesheets/**/*.scss\" --verbose --no-exit --format junit --output ./_testReports/sassLint.xml",
    "test": "echo \"Error: no test specified\" && exit 0",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "onchange \"./_source/stylesheets/**/*.scss\" -- npm run build:css",
    "watch:es6": "onchange \"./_source/scripts/**/*.{es,js,json}\" -- npm run build:js",
    "watch:img": "onchange \"./_source/images/**/*.{gif,jpg,png,svg}\" -- npm run build:img"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AppCivico/DOnM-2017-www.git"
  },
  "keywords": [
    "hugo",
    "js",
    "sass"
  ],
  "author": "AppCívico",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AppCivico/DOnM-2017-www/issues"
  },
  "homepage": "https://github.com/AppCivico/DOnM-2017-www#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.5.0",
    "changelog-verify": "^1.1.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^3.0.0",
    "include-media": "^1.4.9",
    "modularscale-sass": "^3.0.4",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^4.1.1",
    "replaceinfiles": "^1.1.4",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "susy": "^3.0.1",
    "uglify-js": "^3.3.4",
    "version-changelog": "^2.1.0"
  }
}
