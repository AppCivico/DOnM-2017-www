{
  "name": "donm-2017-www",
  "version": "0.1.0",
  "description": "Sistema de acompanhamento da administração municipal de São Paulo na gestão 2017.",
  "main": "index.html",
  "scripts": {
    "build": "npm-run-all --parallel build:content build:img build:css build:js",
    "build:content": "node ./_buildScripts/dataContent.js",
    "build:js": "npm-run-all compile:js",
    "build:css": "npm-run-all compile:sass compress:css",
    "build:dev": "npm-run-all build",
    "build:img": "npm-run-all compress:img",
    "build:prod": "npm-run-all build cachebust",
    "cachebust": "hashmark -l 8 ./static/dist/**/*.{js,css} public_html/{dir}/{name}-{hash}{ext} | replaceinfiles -s 'dist/*.css' -d '{dir}/{base}'",
    "compile:sass": "node-sass ./_source/stylesheets --output-style compressed --output ./static/dist/css --source-map true",
    "compress:css": "postcss --use autoprefixer cssnano --safe -r ./static/dist/css/**/*.css",
    "compress:img": "imagemin ./_source/images/**/*.{gif,jpg,png,svg} --out-dir=./static/dist/img",
    "compile:js": "browserify ./_source/javascripts/index.js -o ./static/dist/js/index.js -t [ babelify ]",
    "lint": "npm-run-all --parallel lint:*",
    "lint:sass": "sass-lint \"./_source/stylesheets/**/*.scss\" --verbose --no-exit",
    "test": "npm run lint && echo \"Error: no test specified\" && exit 0",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "onchange \"./_source/stylesheets/**/*.scss\" -- npm run build:sass",
    "watch:es6": "onchange \"./_source/javascripts/**/*.js\" -- npm run build:js",
    "watch:img": "onchange \"./_source/images/**/*.{gif,jpg,png,svg}\" -- npm run build:img"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AppCivico/DOnM-2017-www.git"
  },
  "keywords": [
    "hugo",
    "js",
    "sass"
  ],
  "author": "AppCívico",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AppCivico/DOnM-2017-www/issues"
  },
  "homepage": "https://github.com/AppCivico/DOnM-2017-www#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "changelog-verify": "^1.0.4",
    "cssnano": "^3.10.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^3.0.0",
    "include-media": "^1.4.9",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.1",
    "sass-lint": "^1.11.1",
    "susy": "^3.0.1",
    "uglify-js": "^3.1.0",
    "version-changelog": "^2.1.0"
  }
}
